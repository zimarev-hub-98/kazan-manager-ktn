<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kazanmanagerktl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn_login_backgroundTint_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="loginBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="imvLogo">
        <item name="android:src">@drawable/light_circle</item>
    </style>

    <style name="tvWelcomeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/light_welcome</item>
    </style>

    <style name="tvWelcomeDescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/light_description</item>
    </style>

    <style name="etlLoginActivity" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/light_etl_hint</item>
        <item name="hintTextColor">@color/light_hint_etl</item>
    </style>

    <style name="etLoginActivity" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/text_field_login_background_light</item>
        <item name="android:textColor">@color/light_text_color_et</item>
    </style>

    <style name="cbRemember">
        <item name="android:textColor">@color/cb_remember_textColor_light</item>
        <item name="android:buttonTint">@color/cb_remember_buttonTint_light</item>
    </style>

    <style name="btnLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/btn_login_textColor_light</item>
        <item name="android:backgroundTint">@color/btn_login_backgroundTint_light</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_light</item>
    </style>

    <style name="btnSetting">
        <item name="android:background">@drawable/ic_settings</item>
    </style>
</resources>